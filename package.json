{
  "name": "eda",
  "displayName": "Eda",
  "publisher": "ryotarai",
  "license": "MIT",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryotarai/vscode-eda.git"
  },
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:eda.addFile",
    "onView:eda"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "eda.addFile",
        "title": "Eda: Add a File"
      },
      {
        "command": "eda.refreshTree",
        "title": "Eda: Refresh Tree",
        "icon": "$(refresh)"
      },
      {
        "command": "eda.openFile",
        "title": "Eda: Open a File"
      },
      {
        "command": "eda.createProfile",
        "title": "Eda: Create a New Profile"
      },
      {
        "command": "eda.switchProfile",
        "title": "Eda: Switch Profile"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "eda",
          "name": "Eda"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "eda.refreshTree",
          "when": "view == eda",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "eda.addFile",
          "when": "!explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "title": "Eda",
      "properties": {
        "eda.collapseTreeAtOpen": {
          "type": "boolean",
          "default": false
        },
        "eda.profiles": {
          "type": "object",
          "default": {},
          "additionalProperties": false,
          "patternProperties": {
            ".+": {
              "type": "object",
              "default": {},
              "properties": {
                "files": {
                  "type": "array",
                  "default": [],
                  "items": {
                    "type": "object",
                    "default": {},
                    "properties": {
                      "path": {
                        "type": "string"
                      },
                      "workspaceFolderName": {
                        "type": "string"
                      }
                    }
                  }
                },
                "patterns": {
                  "type": "array",
                  "default": [],
                  "items": {
                    "type": "object",
                    "default": {},
                    "properties": {
                      "includeFiles": {
                        "type": "array",
                        "default": [],
                        "items": {
                          "type": "string"
                        }
                      },
                      "excludeFiles": {
                        "type": "array",
                        "default": [],
                        "items": {
                          "type": "string"
                        }
                      },
                      "excludeDirs": {
                        "type": "array",
                        "default": [],
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package-extension": "vsce package",
    "publish-extension": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.64.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4",
    "ts-loader": "^9.2.6",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "@vscode/test-electron": "^2.0.3"
  }
}
